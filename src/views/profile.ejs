<%- layout('layouts/main')%>

<div class="row p-2">
    <div class="col-md-3">
        <div class="card">
            <img src="<%= user.profile_picture %>" class="card-img-top">
            <div class="card-body text-center">
                <h5 class="card-title">
                    <%= user.full_name %>
                </h5>
                <%= user.username %>
                <%= user.bio %>
                <hr>
                
                <%= user.counts.media %><i class="fab fa-instagram"></i>
                <%= user.counts.follows %><i class="far fa-heart" class="m-1"></i>
                <%= user.counts.followed_by %><i class="fas fa-users" class="m-1"></i>
            </div>
            <div class="card-footer">
                <a href="<%= user.website %>" class="btn btn-block btn-success" target="_blank">Website</a>
            </div>
        </div>
    </div>
    <div class="col-md-9">
        <% posts.forEach(function (post) { %>
            <div class="col-md-4">
                <div class="card mb-2">
                    <img src="<%= post.images.thumbnail.url %>" class="card-img-top">
                    <div class="card-body">
                         <p>Posted by <%=post.user.full_name%></p>
                         <p><%= formatDate(post.created_time) %></p>
                    </div>
                </div>
            </div>
      <%  }) %>
    </div>
</div>

